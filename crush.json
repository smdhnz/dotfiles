{
  "options": {
    "attribution": {
      "co_authored_by": false,
      "generated_with": true
    },
    "disable_metrics": true,
    "disable_auto_summarize": true,
    "tui": {
      "compact_mode": false
    }
  },
  "mcp": {
    "brave-search": {
      "type": "stdio",
      "command": "bunx",
      "args": ["-y", "@brave/brave-search-mcp-server", "--transport", "stdio"],
      "env": {
        "BRAVE_API_KEY": "$(echo $BRAVE_API_KEY)"
      }
    }
  },
  "lsp": {
    "typescript": {
      "command": "vtsls",
      "args": ["--stdio"]
    },
    "tailwindcss": {
      "command": "tailwindcss-language-server",
      "args": ["--stdio"]
    },
    "python": {
      "command": "pyright-langserver",
      "args": ["--stdio"]
    }
  }
}
